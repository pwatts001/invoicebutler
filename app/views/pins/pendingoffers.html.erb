
<div class="center">
  <%= render 'layouts/dashboardpages' %>
</div>

<br><br>


<div class="center">
  <%= filter_form_for @q do |f| %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <%= f.filter_input :description %>
  <%= f.filter_input :created_at %>
  <%= f.button :submit, "Filter" %>
  <%= link_to "Clear", pendingoffers_path %>
<% end %>
</div>


<table class="invtable">
  <thead>
    <tr>
      <th><%= sortable "description", "Description" %></th>
      <th><%= sortable "created_at", "Created at" %></th>
      <th>Edit</th>
      <th>Delete</th>
      <th>Send Offer</th>
    </tr>
  </thead>
  <tbody>
    <% @invoiceresults.each do |pin| %>
      <tr>
        <th><%= pin.description %></th>
        <th><%= pin.created_at.to_formatted_s(:short) %></th>
        <th><%= link_to edit_pin_path(pin) do %><span class="glyphicon glyphicon-pencil"></span> Edit<% end %></th>
        <th><%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-trash"></span> Delete<% end %></th>
        <th><%= link_to "Send", "#" %></th>
      </tr>
    <% end %>  
  </tbody>
</table>

<div class="center">
   <%= will_paginate @invoiceresults, renderer: BootstrapPagination::Rails %>
</div>





